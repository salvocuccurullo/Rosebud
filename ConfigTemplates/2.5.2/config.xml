<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="20000" id="YOUR_PACKAGE" version="YOUR_VERSION" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Rosebud</name>
    <description>
       Share Movies and Music with your friends
    </description>
    <author email="YOUR_EMAIL" href="YOUR_SITE">
        Max Mustermann
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="https://YOUR_BE_SITE/*" />
    <allow-intent href="https://*.googleapis.com/*" />
    <preference name="permissions" value="none" />
    <preference name="AndroidLaunchMode" value="singleTask" />
    <hook src="scripts/add_notification_icons.js" type="after_prepare" />
    <universal-links>
        <host name="xxxxxxxxxxxxxxxx" scheme="https">
            <path url="/__/auth/callback" />
        </host>
    </universal-links>
    <platform name="android">
        <allow-intent href="market:*" />
        <splash density="land-hdpi" src="res/screen/android/screen-hdpi-landscape.png" />
        <splash density="land-ldpi" src="res/screen/android/screen-ldpi-landscape.png" />
        <splash density="land-mdpi" src="res/screen/android/screen-mdpi-landscape.png" />
        <splash density="land-xhdpi" src="res/screen/android/screen-xhdpi-landscape.png" />
        <splash density="port-hdpi" src="res/screen/android/screen-hdpi-portrait.png" />
        <splash density="port-ldpi" src="res/screen/android/screen-ldpi-portrait.png" />
        <splash density="port-mdpi" src="res/screen/android/screen-mdpi-portrait.png" />
        <splash density="port-xhdpi" src="res/screen/android/screen-xhdpi-portrait.png" />
        <resource-file src="google-services.json" target="google-services.json" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <icon src="res/tv.png" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-app-version" spec="^0.1.9" />
    <plugin name="cordova-plugin-cryptography-aes" spec="^1.0.7" />
    <plugin name="cordova-plugin-network-information" spec="^2.0.1" />
    <plugin name="cordova-plugin-splashscreen" spec="^5.0.2" />
    <plugin name="cordova-plugin-device" spec="^2.0.2" />
    <plugin name="cordova-plugin-file" spec="^6.0.1" />
    <plugin name="cordova-plugin-geolocation" spec="^4.0.1" />
    <plugin name="cordova-plugin-buildinfo" spec="^2.0.2" />
    <plugin name="cordova-universal-links-plugin" spec="^1.2.1" />
    <plugin name="cordova-plugin-inappbrowser" spec="^3.0.0" />
    <plugin name="cordova-android-support-gradle-release" spec="^2.0.1">
        <variable name="ANDROID_SUPPORT_VERSION" value="27.+" />
    </plugin>
    <plugin name="cordova-plugin-googleplus" spec="7.0.0">
        <variable name="PLAY_SERVICES_VERSION" value="11.8.0" />
    </plugin>
    <plugin name="cordova-plugin-googlemaps" spec="^2.5.2">
        <variable name="API_KEY_FOR_ANDROID" value="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx" />
        <variable name="PLAY_SERVICES_VERSION" value="15.0.1" />
        <variable name="ANDROID_SUPPORT_V4_VERSION" value="27.+" />
    </plugin>
    <plugin name="cordova-plugin-pbkdf2" spec="^0.2.0" />
    <plugin name="cordova-plugin-firebase-authentication" spec="^1.1.2">
        <variable name="FIREBASE_AUTH_VERSION" value="16.1.+" />
    </plugin>
    <plugin name="cordova-plugin-browsertab2" spec="^0.3.1" />
    <plugin name="cordova-support-google-services" spec="^1.2.1" />
    <plugin name="cordova-plugin-firebase" spec="^1.1.4" />
    <plugin name="com.napolitano.cordova.plugin.intent" spec="https://github.com/napolitano/cordova-plugin-intent" />
    <engine name="android" spec="8.0.0" />
</widget>
